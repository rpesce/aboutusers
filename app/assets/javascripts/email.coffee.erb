imgsUpdate = ->
  screenWidth = $(window).width()
  if screenWidth >= 992
    $('#logo').attr('src', '<%= asset_path("FLogo.png") %>');
    $('#rp_photo').attr('src', '<%= asset_path("Author.jpg") %>');
  else if screenWidth > 768
    $('#logo').attr('src', '<%= asset_path("FLogo_sm.png") %>');
    $('#rp_photo').attr('src', '<%= asset_path("Author_sm.jpg") %>');
  else
    $('#logo').attr('src', '<%= asset_path("FLogo_white.png") %>');
    $('#rp_photo').attr('src', '<%= asset_path("Author_sm.jpg") %>');
  return

$(document).ready ->
	imgsUpdate();
	return

$(window).on 'resize', ->
	imgsUpdate();
	return

$(window).one 'scroll', ->
  	document.body.scrollTop = document.documentElement.scrollTop = 0;
	return
  

  	
